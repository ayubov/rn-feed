{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "screens": ["./screens"],
      "components": ["./components"],
      "navigation": ["./navigation"],
      "navigation/*": ["./navigation/*"],
      "hooks": ["./hooks"],
      "config": ["./config"],
      "modules": ["./modules"],
      "modules/*": ["./modules/*"]
    }
  },
  "extends": "expo/tsconfig.base"
}
